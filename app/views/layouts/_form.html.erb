<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<%= form_for @user do |f|%>
			<div class="col-xs-12">
				<%=f.text_field :username, :placeholder => "Username", class: "form-control" %>
			</div>

			<div class="col-xs-12">
				<%=f.password_field :password, :placeholder => "Password", class: "form-control" %><br />
			</div>

			<%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
		<% end %>
	</div>
	<div class="col-md-3"></div>
</div>