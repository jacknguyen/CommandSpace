<h1>Edit </h1>
<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-6">
		<%= form_for @item, :html => { class: "form-inline", role: "form"} do |f| %>

			<% f.hidden_field :author, value: current_user %>
			
			<!-- Item Name label for screen rears only -->
			<%= f.label :item_name, {class: "sr-only"} %>
			<%= f.text_field :item_name, {placeholder: "Item Name", class: "form-control"}%>
			
			<!-- Item Price label for screen rears only -->
			<%= f.label :item_price, {class: "sr-only"} %> 
			<%= f.text_field :item_price, {placeholder: "Item Price", class: "form-control"} %>

			<%= f.button(type: 'submit', class: "btn btn-default") do %>
					<span class="glyphicon glyphicon-floppy-disk"></span>
			<% end %>

		<% end %>
	</div>
	<div class="col-md-2"></div>
</div>